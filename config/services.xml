<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="headsnet_livedoc.processor.guided_tour_builder" class="Headsnet\LivingDocumentationBundle\Services\Processor\GuidedTourBuilder"/>

        <service id="headsnet_livedoc.subscriber.console_commands" class="Headsnet\LivingDocumentationBundle\Publisher\PublishConsoleCommands">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.email_messages" class="Headsnet\LivingDocumentationBundle\Publisher\PublishEmailMessages">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.event_actions" class="Headsnet\LivingDocumentationBundle\Publisher\PublishEventActions">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.glossary" class="Headsnet\LivingDocumentationBundle\Publisher\PublishGlossary">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.guided_tour" class="Headsnet\LivingDocumentationBundle\Publisher\PublishGuidedTour">
            <argument type="service" id="twig"/>
            <argument type="service" id="headsnet_livedoc.processor.guided_tour_builder"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.use_cases" class="Headsnet\LivingDocumentationBundle\Publisher\PublishUseCases">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.attribute_loader" class="Headsnet\LivingDocumentationBundle\Services\AttributeLoader">
            <argument type="service" id="event_dispatcher"/>
            <argument type="string" id="%kernel.project_dir%"/>
        </service>

        <service id="headsnet_livedoc.command.publish" class="Headsnet\LivingDocumentationBundle\Console\PublishCommand">
            <argument type="service" id="headsnet_livedoc.attribute_loader"/>
            <tag name="console.command"/>
        </service>

    </services>

</container>
